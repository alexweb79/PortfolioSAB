extends ../template

block variables
    - var title = 'Авторизуйтесь'

block content
    div.Background
        canvas.Background-canvas
    div.container.container-welcome
        div.welcome-login
            button.welcome-login__btn
                span.welcome-login__text Авторизоваться
        div.welcome-center
            div.welcome-center__wrap-title
                .block-title__title.block-title__title-color-white.block-title__title-smoller Авторизуйтесь
            div.welcome-center__welcome-form
                form(action="#" method="post").welcome-form
                    label.welcome-form__login
                        input(type="text" name="login" id="login" placeholder="Логин")
                    label.welcome-form__password
                        input(type="password" name="password" id="password" placeholder="Пароль")
                    label.welcome-form__man
                        input(type="checkbox", name="man" id="man")
                        span.welcome-form__label-text Я человек
                    label.welcome-form__questions Вы точно не робот?
                    div.welcome-form__radio
                        label.welcome-form__yes-no
                            input(type="radio", name="yes-no" id="yes")
                            span.welcome-form__label-text Да
                        label.welcome-form__yes-no
                            input(type="radio", name="yes-no" id="no")
                            span.welcome-form__label-text Не уверен
            div.button-login__wrap
                ul.button-login
                    li.button-login__item
                        a(href="/index.html") На главную
                    li.button-login__item
                        button Войти
        div.welcome-footer
            p.welcome-footer__copyright &copy; Александр Смирнов | LoftSchool 2017
